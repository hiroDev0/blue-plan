<div class="container mx-auto mt-4" style="max-Width:600px;">
    <div class="text-left mt-4 pb-2 border-bottom border-primary px-3" style="border-width: 10px;">
    <h1>新規登録画面</h1>
    </div>
    <%= form_with(model: @plan, url: plans_path) do |form| %>

        <div class=from-group mt-3>
            <%= form.label :UserID%>
            <%= form.number_field :user_id, class: "form-control" %>

        <div class="form-group mt-3">
            <%= form.label :"タイトル" %>
            <%= form.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group mt-3">
            <%= form.label :"内容" %>
            <%= form.text_area :content, class: "form-control" %>

        </div>

        <div class="form-group mt-3">
            <%= form.label :"開始時間" %>
            <%= form.datetime_field :start_time, class: "form-control" %>
        </div>

        <div class="text-center mt-3">
            <%= form.submit "保存", class: "btn btn-primary mt-3 mx-3 btn-block" %>
            <%= link_to "戻る", '/plans/calendar', class: "btn btn-secondary mt-3 mx-3" %>
        </div>


    <% end %>
</div>

